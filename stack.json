{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "Connect two EC2 servers to ALB in a VPC",
	"Parameters": {
		"KeyPair": {
			"Type": "AWS::EC2::KeyPair::KeyName",
			"Default": "SSH_ALB_DEMO",
			"Description": "SSH key that will be used for EC2 instances (set up in web console)",
			"ConstraintDescription": "needs to be an existing EC2 keypair (set up in web console)"
		}
	},
	"Mappings": {
		"RegionMap": {
			"us-west-1": { "AMI": "ami-3a674d5a" }
		},
		"NatRegionMap": {
			"us-west-1": { "AMI": "ami-6089be00" }
		}
	},
	"Resources": {
		"VPC1": {
			"Type": "AWS::EC2::VPC",
			"Properties": {
				"CidrBlock": "10.0.0.0/16",
				"EnableDnsHostnames": true,
				"Tags": [{
					"Key": "resclass",
					"Value": "vpc"
				}]
			}
		},
		"Subnet1": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"CidrBlock": "10.0.0.0/24",
				"MapPublicIpOnLaunch": true,
				"Tags": [{
						"Key": "resclass",
						"Value": "subnet"
					},
					{
						"Key": "subnet-type",
						"Value": "public"
					}
				],
				"VpcId": {
					"Ref": "VPC1"
                },
                "AvailabilityZone": "us-west-1a"
			}
		},
		"Subnet2": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"CidrBlock": "10.0.1.0/24",
				"MapPublicIpOnLaunch": false,
				"Tags": [{
						"Key": "resclass",
						"Value": "subnet"
					},
					{
						"Key": "subnet-type",
						"Value": "private"
					}
				],
				"VpcId": {
					"Ref": "VPC1"
				},
				"AvailabilityZone": "us-west-1c"
			}
		},
		"Gateway": {
			"Type": "AWS::EC2::InternetGateway",
			"Properties": {
				"Tags": [{
					"Key": "resclass",
					"Value": "gateway"
				}]
			}
		},
		"GatewayAttachment": {
			"Type": "AWS::EC2::VPCGatewayAttachment",
			"Properties": {
				"InternetGatewayId": {
					"Ref": "Gateway"
				},
				"VpcId": {
					"Ref": "VPC1"
				}
			}
		},
		"PublicRouteTable": {
			"Type": "AWS::EC2::RouteTable",
			"Properties": {
				"VpcId": {
					"Ref": "VPC1"
				},
				"Tags": [{
						"Key": "resclass",
						"Value": "routetable"
					},
					{
						"Key": "routetable-type",
						"Value": "public"
					}
				]
			}
		},
		"PublicDefaultRoute": {
			"Type": "AWS::EC2::Route",
			"Properties": {
				"DestinationCidrBlock": "0.0.0.0/0",
				"GatewayId": {
					"Ref": "Gateway"
				},
				"RouteTableId": {
					"Ref": "PublicRouteTable"
				}
			}
		},
		"PublicSubnet1Assoc": {
			"Type": "AWS::EC2::SubnetRouteTableAssociation",
			"Properties": {
				"SubnetId": {
					"Ref": "Subnet1"
				},
				"RouteTableId": {
					"Ref": "PublicRouteTable"
				}
			}
		},
		"PrivateRouteTable": {
			"Type": "AWS::EC2::RouteTable",
			"Properties": {
				"VpcId": {
					"Ref": "VPC1"
				},
				"Tags": [
                    {
						"Key": "resclass",
						"Value": "routetable"
					},
					{
						"Key": "routetable-type",
						"Value": "private"
					}
				]
			}
		},
		"PrivateDefaultRoute": {
			"Type": "AWS::EC2::Route",
			"Properties": {
				"DestinationCidrBlock": "0.0.0.0/0",
				"InstanceId": {
					"Ref": "NatGw"
				},
				"RouteTableId": {
					"Ref": "PrivateRouteTable"
				}
			}
		},
		"PrivateSubnet2Assoc": {
			"Type": "AWS::EC2::SubnetRouteTableAssociation",
			"Properties": {
				"SubnetId": {
					"Ref": "Subnet2"
				},
				"RouteTableId": {
					"Ref": "PrivateRouteTable"
				}
			}
		},
		"NatSecurityGroup": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"Tags": [{
					"Key": "resclass",
					"Value": "nat-security-group"
				}],
				"GroupDescription": "NAT (External) security group",
				"VpcId": {
					"Ref": "VPC1"
				},
				"SecurityGroupIngress": [
                    {
						"IpProtocol": "tcp",
						"CidrIp": "10.0.1.0/24",
						"FromPort": "80",
						"ToPort": "80"
					},
					{
						"IpProtocol": "tcp",
						"CidrIp": "10.0.1.0/24",
						"FromPort": "443",
						"ToPort": "443"
					},
					{
						"IpProtocol": "tcp",
						"CidrIp": "0.0.0.0/0",
						"FromPort": "22",
						"ToPort": "22"
					}
				],
				"SecurityGroupEgress": [
                    {
						"IpProtocol": "tcp",
						"CidrIp": "0.0.0.0/0",
						"FromPort": "22",
						"ToPort": "22"
					},
					{
						"IpProtocol": "tcp",
						"CidrIp": "0.0.0.0/0",
						"FromPort": "80",
						"ToPort": "80"
					},
					{
						"IpProtocol": "tcp",
						"CidrIp": "0.0.0.0/0",
						"FromPort": "443",
						"ToPort": "443"
					}
				]
			}
		},
		"PrivateSecurityGroup": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"Tags": [{
					"Key": "resclass",
					"Value": "private-security-group"
				}],
				"GroupDescription": "Private (Internal) security group",
				"VpcId": {
					"Ref": "VPC1"
				},
				"SecurityGroupIngress": [{
					"IpProtocol": "-1",
					"CidrIp": "0.0.0.0/0"
				}],
				"SecurityGroupEgress": [{
					"IpProtocol": "-1",
					"CidrIp": "0.0.0.0/0"
				}]
			}
		},
		"ElbSecurityGroup": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"Tags": [{
					"Key": "resclass",
					"Value": "elb-security-group"
				}],
				"GroupDescription": "ELB (load balancer) security group",
				"VpcId": {
					"Ref": "VPC1"
				},
				"SecurityGroupIngress": [
                    {
						"IpProtocol": "tcp",
						"CidrIp": "0.0.0.0/0",
						"FromPort": "80",
						"ToPort": "80"
					},
					{
						"IpProtocol": "tcp",
						"CidrIp": "0.0.0.0/0",
						"FromPort": "443",
						"ToPort": "443"
					}
				],
				"SecurityGroupEgress": [
                    {
						"IpProtocol": "tcp",
						"CidrIp": "0.0.0.0/0",
						"FromPort": "80",
						"ToPort": "80"
					},
					{
						"IpProtocol": "tcp",
						"CidrIp": "0.0.0.0/0",
						"FromPort": "443",
						"ToPort": "443"
					}
				]
			}
		},
		"NatGw": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"ImageId": {
					"Fn::FindInMap": ["NatRegionMap", { "Ref": "AWS::Region" }, "AMI"]
				},
				"InstanceType": "t2.micro",
				"KeyName": {
					"Ref": "KeyPair"
				},
				"SubnetId": {
					"Ref": "Subnet1"
				},
				"SourceDestCheck": false,
				"SecurityGroupIds": [{
					"Ref": "NatSecurityGroup"
				}],
				"Tags": [{
					"Key": "resclass",
					"Value": "nat-gateway"
				}],
				"UserData": {
					"Fn::Base64": {
						"Fn::Join": ["", [
							"#!/bin/bash -xe\n",
							"/usr/bin/yum -y update\n",
							"echo \"/opt/aws/bin/cfn-signal -e $? ",
							"  --stack ", {
								"Ref": "AWS::StackName"
							}, " ",
							"  --resource NatGw ",
							"  --region ", {
								"Ref": "AWS::Region"
							}, " ",
							"  && sed -i 's#^/opt/aws/bin/cfn-signal .*\\$##g' ",
							"  /etc/rc.local\" >> /etc/rc.local\n",
							"/sbin/reboot\n"
						]]
					}
				}
			},
			"CreationPolicy": {
				"ResourceSignal": {
					"Count": 1,
					"Timeout": "PT10M"
				}
			}
		},

		"LoadBalancer": {
			"Type": "AWS::ElasticLoadBalancingV2::LoadBalancer",
			"Properties": {
				"Scheme": "internet-facing",
				"Name": {
					"Fn::Join": ["-", [{
						"Ref": "AWS::StackName"
					}, "LoadBalancer"]]
				},
				"Subnets": [
                    { "Ref": "Subnet1" },
                    { "Ref": "Subnet2" }
                ],
				"SecurityGroups": [{
					"Ref": "ElbSecurityGroup"
				}]
			}
		},
		"TargetGroupService1": {
			"Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
			"Properties": {
				"Name": { "Fn::Join": ["-", [{ "Ref": "AWS::StackName" }, "TargetGroupService1"]] },
				"Port": 80,
				"Protocol": "HTTP",
				"HealthCheckPath": "/service1",
				"VpcId": { "Ref": "VPC1" },
				"TargetType": "instance",
				"Targets": [{
					"Id": {
						"Ref": "Srv1"
					}
				}]
			}
		},
		"TargetGroupService2": {
			"Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
			"Properties": {
				"Name": { "Fn::Join": ["-", [{ "Ref": "AWS::StackName" }, "TargetGroupService2"]] },
				"Port": 80,
				"Protocol": "HTTP",
				"HealthCheckPath": "/service2",
				"VpcId": { "Ref": "VPC1" },
				"TargetType": "instance",
				"Targets": [{
					"Id": {
						"Ref": "Srv2"
					}
				}]
			}
		},
		"Listener": {
			"Type": "AWS::ElasticLoadBalancingV2::Listener",
			"Properties": {
				"DefaultActions": [{
					"Type": "forward",
					"TargetGroupArn": {
						"Ref": "TargetGroupService1"
					}
				}],
				"LoadBalancerArn": {
					"Ref": "LoadBalancer"
				},
				"Port": "80",
				"Protocol": "HTTP"
			}
		},
		"ListenerRuleService1": {
			"Type": "AWS::ElasticLoadBalancingV2::ListenerRule",
			"Properties": {
				"Actions": [{
					"TargetGroupArn": {
						"Ref": "TargetGroupService1"
					},
					"Type": "forward"
				}],
				"Conditions": [{
					"Field": "path-pattern",
					"Values": ["/service1"]
				}],
				"ListenerArn": {
					"Ref": "Listener"
				},
				"Priority": 1
			}
		},
		"ListenerRuleService2": {
			"Type": "AWS::ElasticLoadBalancingV2::ListenerRule",
			"Properties": {
				"Actions": [{
					"TargetGroupArn": {
						"Ref": "TargetGroupService2"
					},
					"Type": "forward"
				}],
				"Conditions": [{
					"Field": "path-pattern",
					"Values": ["/service2"]
				}],
				"ListenerArn": {
					"Ref": "Listener"
				},
				"Priority": 2
			}
		},
		"Srv1": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"ImageId": {
					"Fn::FindInMap": ["RegionMap", {
						"Ref": "AWS::Region"
					}, "AMI"]
				},
				"InstanceType": "t2.micro",
				"KeyName": {
					"Ref": "KeyPair"
				},
				"SubnetId": {
					"Ref": "Subnet2"
				},
				"SecurityGroupIds": [{
					"Ref": "PrivateSecurityGroup"
				}],
				"Tags": [{
					"Key": "resclass",
					"Value": "srv"
				}],
				"UserData": {
					"Fn::Base64": {
						"Fn::Join": ["", [
							"#!/bin/bash -xe\n",
							"/usr/bin/yum -y update\n",
							"/usr/bin/yum -y install httpd\n",
							"/sbin/chkconfig httpd on\n",                            
                            "echo '<html><head></head><body>service1</body></html>' > /var/www/html/service1\n",
							"echo \"/opt/aws/bin/cfn-signal -e $? ",
							"  --stack ", {
								"Ref": "AWS::StackName"
							}, " ",
							"  --resource Srv1 ",
							"  --region ", {
								"Ref": "AWS::Region"
							}, " ",
							"  && sed -i 's#^/opt/aws/bin/cfn-signal .*\\$##g' ",
							"  /etc/rc.local\" >> /etc/rc.local\n",
							"/sbin/reboot\n"
						]]
					}
				}
			},
			"CreationPolicy": {
				"ResourceSignal": {
					"Count": 1,
					"Timeout": "PT10M"
				}
			},
			"DependsOn": "NatGw"
		},
		"Srv2": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"ImageId": {
					"Fn::FindInMap": ["RegionMap", {
						"Ref": "AWS::Region"
					}, "AMI"]
				},
				"InstanceType": "t2.micro",
				"KeyName": {
					"Ref": "KeyPair"
				},
				"SubnetId": {
					"Ref": "Subnet2"
				},
				"SecurityGroupIds": [{
					"Ref": "PrivateSecurityGroup"
				}],
				"Tags": [{
					"Key": "resclass",
					"Value": "srv"
				}],
				"UserData": {
					"Fn::Base64": {
						"Fn::Join": ["", [
							"#!/bin/bash -xe\n",
							"/usr/bin/yum -y update\n",
							"/usr/bin/yum -y install httpd\n",
							"/sbin/chkconfig httpd on\n",
                            "echo '<html><head></head><body>service2</body></html>' > /var/www/html/service2\n",
							"echo \"/opt/aws/bin/cfn-signal -e $? ",
							"  --stack ", {
								"Ref": "AWS::StackName"
							}, " ",
							"  --resource Srv2 ",
							"  --region ", {
								"Ref": "AWS::Region"
							}, " ",
							"  && sed -i 's#^/opt/aws/bin/cfn-signal .*\\$##g' ",
							"  /etc/rc.local\" >> /etc/rc.local\n",
							"/sbin/reboot\n"
						]]
					}
				}
			},
			"CreationPolicy": {
				"ResourceSignal": {
					"Count": 1,
					"Timeout": "PT10M"
				}
			},
			"DependsOn": "NatGw"
		}
	},
	"Outputs": {
		"NatIPAddr": {
			"Description": "IP address of the NAT instance (SSH to this address)",
			"Value": {
				"Fn::GetAtt": ["NatGw", "PublicIp"]
			}
		},
		"Srv1IPAddr": {
			"Description": "IP address of srv1 (internal)",
			"Value": {
				"Fn::GetAtt": ["Srv1", "PrivateIp"]
			}
		},
		"Srv2IPAddr": {
			"Description": "IP address of srv2 (internal)",
			"Value": {
				"Fn::GetAtt": ["Srv2", "PrivateIp"]
			}
		},
		"ELBDNSName": {
			"Description": "DNS host for the ELB",
			"Value": {
				"Fn::GetAtt": ["LoadBalancer", "DNSName"]
			}
		}
	}
}